<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- theme black -->
    <style name="AppTheme.AppThemeBlack">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
    </style>

    <!-- theme blue-->
    <style name="AppTheme.AppThemeBlue">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <!-- theme BlueGreen-->
    <style name="AppTheme.AppThemeBlueGreen">
        <item name="colorPrimary">@color/colorPrimaryBlueGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlueGreen</item>
        <item name="colorAccent">@color/colorAccentBlueGreen</item>
    </style>

    <!-- theme GreyBlue-->
    <style name="AppTheme.AppThemeGreyBlue">
        <item name="colorPrimary">@color/colorPrimaryGreyBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreyBlue</item>
        <item name="colorAccent">@color/colorAccentGreyBlue</item>
    </style>

    <!-- theme pink-->
    <style name="AppTheme.AppThemePink">
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
    </style>

    <!-- theme Yellow-->
    <style name="AppTheme.AppThemeYellow">
        <item name="colorPrimary">@color/colorPrimaryYellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkYellow</item>
        <item name="colorAccent">@color/colorAccentYellow</item>
    </style>

    <!-- theme Red-->
    <style name="AppTheme.AppThemeRed">
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>
    <!-- theme Green-->
    <style name="AppTheme.AppThemeGreen">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>
    <!-- theme Purple-->
    <style name="AppTheme.AppThemePurple">
        <item name="colorPrimary">@color/colorPrimaryPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPurple</item>
        <item name="colorAccent">@color/colorAccentPurple</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/PinkRoseLight</item>
        <item name="colorPrimaryDark">@color/PinkRoseDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
